---
import Layout from '../layouts/Layout.astro'
import { books } from '../data/books.js'

const { book } = Astro.props

const info = books.find((b) => b.id === book)

if (!info) {
	return Astro.redirect('/404')
}
---

<Layout title={info.title}>
	<h1>{info.title}</h1>
	<p>{info.opinion}</p>
	<p>Author: {info.author}</p>
</Layout>
